@model MS_Rentacar.Entities.EntityFramework.KiralamaKosullari
@{
    ViewBag.Title = "Rules";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="page-title">
    Admin Paneli &amp; Kiralama Koşulları.
    <small>MS &amp; Rent A Car</small>
</h3>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXTRAS PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Kiralama Koşulları
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                    <a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title=""> </a>
                    <a href="javascript:;" class="reload" data-original-title="" title=""> </a>
                    <a href="javascript:;" class="remove" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                
                    @using (Html.BeginForm("Rules", "Admin", FormMethod.Post, new { @class = "form-horizontal form-bordered" }))
                    { 
                    <div class="form-body">
                        <div class="form-group last">
                            <label class="control-label col-md-3">Açıklama</label>
                            <div class="col-md-9">
                                <textarea class="ckeditor form-control" name="editor1" rows="6" style="visibility:hidden; display:none;"></textarea>
                                @Html.TextAreaFor(c => c.Aciklama, new { @class = "ckeditor form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">
                                    <i class="fa fa-check"></i> Kaydet
                                </button>
                                <a href="~/Admin" class="btn btn-outline grey-salsa">Geri Dön</a>
                            </div>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
        <!-- END EXTRAS PORTLET-->
    </div>
</div>